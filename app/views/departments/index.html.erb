<h1>Departments#index</h1>
<h2>Select a Department below to see its items</h2>
<h4><%= link_to "New Department", new_department_path %></h4>

<% @departments.each do |department|%>
  <h2><%= department.name %></h2>
  <h4><%= link_to "Visit Department", department_path(department) %></h4>
  <h4><%= link_to "Edit Department", edit_department_path(department) %></h4>
  <h4><%= link_to "Delete Department", department, method: :delete %>
<% end %>
